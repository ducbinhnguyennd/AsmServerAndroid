<div class="container" style="margin-top: 40px;">
    <div class="col-1 col-sm-4 col-md-12">

        <table class="table table-bordered table-striped" style="text-align: center;">
            <tr>
                <th>ID</th>
                <th>Ảnh</th> 
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Chi tiết sản phẩm</th>
                <th>Hãng</th>
                <th></th>
            </tr>
        
            <% listSP.forEach( ( row )=>{  %>
                
            <tr>
                <td><%= row._id%></td>
                <td style="text-align: center;">
                    <img src="<%= row.img%>" alt="" style="width: 80px; height: 80px;">
                </td>       

                <td>
                    <a href="/home/chitiet/<%= row._id %>">
                        <%= row.name %>
                    </a> 
                </td>
                <td> <%= row.price %> </td>
                <td> <%= row.noidung %> </td>
                <td> <%= row.id_theloai.name %> </td>

                <td> <a href="home/edit/<%= row._id %>">
                        <button type="button" class="btn btn-light">Sửa</button> 
                     </a>
                        <butaton type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            xóa
                        </button>
                           
                        <div class="modal fade" id="staticBackdrop" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" >
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Chắc chắn muốn xóa ?</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                                            <a href="home/deleteSP/<%= row._id%>"><button type="button" class="btn btn-primary" data-bs-dismiss="modal">Có</button></a>
                                        </div>
                                    </div>
                                </div>
                        </div> 
                </td>

            </tr>
            <% } ) %>
        
            </table>
       
    </div>
</div>






